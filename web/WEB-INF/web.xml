<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>Signup</servlet-name>
        <servlet-class>servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servlets.loginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminServlet</servlet-name>
        <servlet-class>servlets.adminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayAllBooksServlet</servlet-name>
        <servlet-class>servlets.DisplayAllBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBooks</servlet-name>
        <servlet-class>servlets.UpdateBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayAllUsersServlet</servlet-name>
        <servlet-class>servlets.DisplayAllUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBookServlet</servlet-name>
        <servlet-class>servlets.DeleteBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminServlet</servlet-name>
        <url-pattern>/admin/adminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayAllBooksServlet</servlet-name>
        <url-pattern>/displayAllBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBooks</servlet-name>
        <url-pattern>/updateBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayAllUsersServlet</servlet-name>
        <url-pattern>/displayAllUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBookServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
</web-app>
